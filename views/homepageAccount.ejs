<!DOCTYPE html>
<html lang="en">
<head>
<%- include head %>
</head>
    <body>
        <%- include header %>
        
        <% 
            let level = 0;

            (userData.credit >= 5) && ( level=1 );
            (userData.credit >= 20) && ( level=2 );
            (userData.credit >= 50) && ( level=3 );
            (userData.credit >= 100) && ( level=4 );
            (userData.credit >= 300) && ( level=5 );
        %>

        <div class="wrap">
            <div id="update-profile">
                <div class="fl w260">
                    <div class="update-profile-avatar">
                        <a href="/user/<%= userData.uuid %>">
                            <img src="<%= userData ? (userData.avatar ? userData.avatar : '/assets/img/user-avatar-default.png' ) : '/assets/img/user-avatar-default.png' %>" />
                            <div class="update-profile-avatar-upload">
                                <i class="lnr lnr-upload"></i>
                            </div>
                        </a>
                    </div>
                    <div class="update-profile-name"><%= userData.name %></div>
                    <div class="user-display-infomation-level">
                        <div class="user-infomation-level">
                            <b>Levl:<%= level %></b>
                            <%- (level >= 3) ? '<span>Pro</span>' : '' %>
                        </div>
                    </div>
                    <div class="update-profile-postscription"><%- userData.postScript ? userData.postScript.replace(/\n/g,'<br />') : '该用户很懒,没有个人介绍' %></div>
                </div>
                <div class="fr user-right">
                    <div class="update-profile-change-link"><a class="btn orange" href="/user/update">修改资料</a></div>
                    <div class="update-profile-title">修改账户设置</div>
                    <div class="update-profile-container">
                        
                        <div class="update-profile-container-item">
                            <div class="update-profile-container-title">账户设置</div>
                            
                            <div class="update-profile-container-line">
                                <div class="update-profile-container-lt">手机号</div><span style="display:inline-block;vertical-align:middle;font-size:14px;margin-right:20px" data-key="email" class="orange"><%= userData.mobile %></span>
                            </div>
                            
                            <div class="update-profile-container-line">
                                <div class="update-profile-container-line-input">
                                    <input data-key="oldpass" type="password" placeholder="当前密码" />
                                </div>
                            </div>
                            
                            <div class="update-profile-container-line">
                                <div class="update-profile-container-line-input">
                                    <input data-key="pass" type="password" placeholder="新密码" />
                                </div>
                            </div>
                            
                            <div class="update-profile-container-line">
                                <div class="update-profile-container-line-input">
                                    <input data-key="passconfrim" type="password" placeholder="重复新密码" />
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    
                    <div class="update-account-save btn fr">完成</div>
                    <div class="clear"></div>
                    
                </div>
                <div class="clear"></div>
            </div>
        </div>
        
        <%- include footer %>
        
    </body>
</html>
